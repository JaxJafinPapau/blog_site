<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="post-title"><%= post.title %></td>
        <td><%= post.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @posts %>
<br>

<%= link_to 'New Post', posts_new_path %><br/>

<%= link_to 'Sign In', new_user_session_path %><br/>
<%= link_to 'Sign Up', new_user_registration_path %>